@model IEnumerable<DogGo.Models.Walker>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New Walker</a> <br />
    <a asp-controller="Walks" asp-action="Create">Schedule a Walk</a>
</p>

<div class="all-walker-cards">
    @foreach (var item in Model)
    {
        <div class="walker-card">
            <h2>@item.Name</h2>
            <div>@item.Id</div>
            <img class="owner-avatar" src="@item.ImageUrl" alt="avatar" />
            <div class="owner-actions">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </div>
    }
</div>

