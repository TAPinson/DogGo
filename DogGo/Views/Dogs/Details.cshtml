@model DogGo.Models.ViewModels.DogProfileViewModel

@{ ViewData["Title"] = "Profile"; }

<h1 class="mb-4">@Model.dog.Name</h1>

<section class="container">
    <img style="width:100px;float:left;margin-right:20px"
         src="@Model.dog.ImageUrl" />
    <div>
        <label class="font-weight-bold">Breed:</label>
        <span>@Model.dog.Breed</span>
    </div>
    <div>
        <label class="font-weight-bold">Notes:</label>
        <span>@Model.dog.Notes</span>
    </div>
    <div>
        <label class="font-weight-bold">Owner:</label>
        <span>@Model.dog.Owner.Name</span>
    </div>
</section>

<hr class="mt-5" />